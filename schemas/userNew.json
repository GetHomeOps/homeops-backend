{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/example.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "email": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "format": "email"
    },
    "password": {
      "type": "string",
      "minLength": 5,
      "maxLength": 20
    },
    "phone": {
      "type": "string",
      "maxLength": 50
    },
    "role": {
      "type": "string",
      "maxLength": 50
    },
    "contact": {
      "type": "integer"
    },
    "is_active": {
      "type": "boolean"
    }
  },
  "additionalProperties": false,
  "required": ["name", "email", "password"]
}
