{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/maintenanceRecordSchema.json",
  "type": "object",
  "properties": {
    "property_id": {"type": "integer"},
    "system_key": {"type": "string", "maxLength": 50},
    "completed_at": {"type": ["string", "null"], "format": "date-time"},
    "next_service_date": {"type": ["string", "null"], "format": "date"},
    "data": {"type": "object"},
    "status": {"type": "string", "maxLength": 50},
    "record_status": {"type": ["string", "null"], "enum": ["draft", "user_completed", "contractor_pending", null]}
  },
  "additionalProperties": false,
  "required": ["property_id", "system_key", "completed_at", "next_service_date", "data", "status"]
}
