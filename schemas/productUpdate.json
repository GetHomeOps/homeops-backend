{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "database_id": {"type": "integer"},
    "name": {"type": "string", "minLength": 1},
    "for_sale": {"type": "boolean"},
    "for_purchase": {"type": "boolean"},
    "type_id": {"type": "integer"},
    "track_inventory": {"type": "boolean"},
    "quantity_on_hand": {"type": "number"},
    "sales_price": {"type": "number"},
    "cost": {"type": "number"},
    "reference": {"type": "string"},
    "barcode": {"type": "string"},
    "responsible_id": {"type": "integer"},
    "weight": {"type": "number"},
    "weight_unit": {
      "type": "string",
      "enum": ["kg", "g", "lb", "oz"]
    },
    "volume": {"type": "number"},
    "volume_unit": {
      "type": "string",
      "enum": ["l", "ml", "gal", "qt", "pt", "fl_oz"]
    },
    "lead_time": {"type": "integer"},
    "lead_time_unit": {
      "type": "string",
      "enum": ["days", "weeks", "months"]
    },
    "delivery_note": {"type": "string"},
    "categories": {
      "type": "array",
      "items": {"type": "integer"}
    },
    "sales_taxes": {
      "type": "array",
      "items": {"type": "integer"}
    },
    "purchase_taxes": {
      "type": "array",
      "items": {"type": "integer"}
    },
    "vendors": {
      "type": "array",
      "items": {"type": "integer"}
    }
  },
  "additionalProperties": false
}
